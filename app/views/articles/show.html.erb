<h1>Showing selected article</h1>
<% if @article.user %>
  <ul class="listing">
    <li><%= link_to gravatar_for(@article.user), user_path(@article.user)%></li>
    <!--    link to the user showpage use user_path-->
    <li><%= link_to @article.user.username, user_path(@article.user)%> </li>
    <li><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></li>
  </ul>
<% end %>
<p>
  Title: <%= @article.title%>
</p>
<p>
  Description <%= @article.description %>
</p>
<%= link_to "Edit this article", edit_article_path%> |
<%= link_to "Back to listing", articles_path%>