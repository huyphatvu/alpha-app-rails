<p><%= link_to "create new article", new_article_path %></p>
<br>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

  <%#= debugger %>
  <%	 articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, article_path(article) %></td>
      <td><%= article.description %></td>
      <div class="article-meta-detail">
        <td>Created by <%= article.user.username%> if article.user</td>
        <td>Created at <%=	time_ago_in_words(article.created_at) %> ago</td>
        <td>Updated <%=	time_ago_in_words(article.updated_at) %> ago</td>
      </div>
      <td><%= link_to "edit", edit_article_path(article) %></td>
      <td><%= link_to "show", article_path(article) %></td>
      <td><%= link_to "delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <%	 end %>
</table>