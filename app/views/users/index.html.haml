%h1{:align => "center"} All Alpha Bloggers
%div{:align => "center"}= will_paginate
%div{:align => "center"}
  -@users.each do |user|
    .row
      %ul{style: "list-style: none"}
        .listing.col-md-4.col-md-offset-4.article-body.well.well-lg
          %li= link_to gravatar_for(user), user_path(user)
          -# link to the user showpage use user_path
          .article-title
            %li= link_to user.username, user_path(user)
          %li= pluralize(user.articles.count, "article") if user.articles
          - if logged_in? and current_user.admin?
            %li= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete the user and all their articles?"}
%div{:align=>"center"}=will_paginate
