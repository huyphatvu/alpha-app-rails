
<%= render './shared/errors', obj: @user %>


<%= form_for @user do |f| %>
  <p>
    <%=	 f.label :username %><br>
    <%=	 f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_area :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit(@user.new_record? ? "Signup" : "Update Account") %>
  </p>
<% end %>

